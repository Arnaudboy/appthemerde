
    <!-- Page Features -->
	<body>

<div class="container">
	<div class="d-flex flex-wrap">
	<% @items.each do |item| %>
    	<div class="cart-card col-lg-3 col-md-6 mb-4 text-center">
			<div class="card h-100" style="width: 100%;">
			<div class="my-image-container"></div>
			<div class="card-body">
				<h4 class="card-title"><%= item.title %></h4>
				<p class="card-text"><%= item.description %></p>
			</div>
			<div id="">
				<p class="card-text"><%= item.price %></p>
				</div>
					<div id="buttons">
					<div id="add-to-cart">
						<%= link_to "Cart", class: "nav-link" %>
					</div>
					<div id="show-item-page">
						<%= link_to "Show item", class: "nav-link" %>
					</div>
				</div>
			</div>
    	</div>
	<%end%>
	</div>
</div>
	

</body>
